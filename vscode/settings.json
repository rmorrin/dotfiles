// Place your settings in this file to overwrite the default settings
{
    // Enable/disable navigation breadcrumbs
    "breadcrumbs.enabled": true,

    // Controls the font size in pixels
    "editor.fontSize": 15,

    // Controls whether the minimap is shown
    "editor.minimap.enabled": true,

    // Limit the width of the minimap to render at most a certain number of columns
    "editor.minimap.maxColumn": 80,

    // Controls how the editor should render whitespace characters, posibilties are 'none', 'boundary', and 'all'. The 'boundary' option does not render single spaces between words
    "editor.renderWhitespace": "all",

    // Render vertical rulers after a certain number of monospace characters. Use multiple values for multiple rulers. No rulers are drawn if array is empty
    "editor.rulers": [ 140 ],

    // When enabled, Emmet abbreviations are expanded when pressing TAB
    "emmet.triggerExpansionOnTab": true,

    // Number of editors shown in the Open Editors pane. Set it to 0 to hide the pane
    "explorer.openEditors.visible": 0,

    // Configure glob patterns for excluding files and folders. For example, the files explorer decides which files and folders to show or hide based on this setting
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/obj": true
    },

    // Whether auto refreshing is enabled
    "git.autorefresh": false,

    // Specifies whether to provide a blame annotation for the current line, by default
    "gitlens.currentLine.enabled": false,

    // Specifies whether to provide an authors code lense, showing number of authors of the file or code black and the most prominent author (if there is more than one)
    "gitlens.codeLens.authors.enabled": false,

    // Specifies whether to provide a recent change code lense, showing the author and date of the most recent commit for the file or code block
    "gitlens.codeLens.recentChange.enabled": false,

    // Maxmium amount of characters per line (0 = disable)
    "html.format.wrapLineLength": 0,

    // Specifies whether Peacock should affect the status bar
    "peacock.affectStatusBar": false,

    // Specifies whether Peacock should affect the activity bar
    "peacock.affectActivityBar": false,

    // Your favorite colors
    "peacock.favoriteColors": [
        {
